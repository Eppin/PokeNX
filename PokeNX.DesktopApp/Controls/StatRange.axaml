<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PokeNX.DesktopApp.Controls.StatRange">

    <Grid ColumnDefinitions="*,Auto,*">
        <NumericUpDown Grid.Column="0" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=MinValue}" ShowButtonSpinner="False" Minimum="0" Maximum="31"/>
        <TextBlock Grid.Column="1" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="~"/>
        <NumericUpDown Grid.Column="2" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=MaxValue}" ShowButtonSpinner="False" Minimum="0" Maximum="31"/>
    </Grid>

</UserControl>
